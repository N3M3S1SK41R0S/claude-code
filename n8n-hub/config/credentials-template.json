{
  "_NEMESIS_HUB_CREDENTIALS_TEMPLATE_": "Remplissez vos clés API ci-dessous",
  "_VERSION_": "1.0.0",
  "_INSTRUCTIONS_": [
    "1. Copiez ce fichier vers 'credentials.json'",
    "2. Remplissez vos vraies clés API",
    "3. Ne partagez JAMAIS ce fichier avec vos clés",
    "4. Importez dans n8n via Settings > Credentials"
  ],

  "platforms": {
    "google_ai_studio": {
      "name": "Google AI Studio / Gemini",
      "api_key": "VOTRE_CLE_API_GOOGLE_AI",
      "docs": "https://aistudio.google.com/app/apikey",
      "instructions": [
        "1. Allez sur https://aistudio.google.com",
        "2. Cliquez sur 'Get API Key'",
        "3. Créez une nouvelle clé ou copiez l'existante"
      ]
    },

    "notion": {
      "name": "Notion",
      "api_key": "secret_VOTRE_CLE_NOTION",
      "database_ids": {
        "main": "VOTRE_DATABASE_ID_PRINCIPAL",
        "tasks": "VOTRE_DATABASE_ID_TACHES",
        "projects": "VOTRE_DATABASE_ID_PROJETS"
      },
      "docs": "https://www.notion.so/my-integrations",
      "instructions": [
        "1. Allez sur https://www.notion.so/my-integrations",
        "2. Créez une nouvelle intégration",
        "3. Copiez le 'Internal Integration Token'",
        "4. Partagez vos databases avec l'intégration"
      ]
    },

    "discord": {
      "name": "Discord Bot",
      "bot_token": "VOTRE_TOKEN_BOT_DISCORD",
      "client_id": "VOTRE_CLIENT_ID",
      "guild_id": "VOTRE_SERVEUR_ID",
      "channels": {
        "general": "ID_CHANNEL_GENERAL",
        "notifications": "ID_CHANNEL_NOTIFICATIONS",
        "logs": "ID_CHANNEL_LOGS"
      },
      "docs": "https://discord.com/developers/applications",
      "instructions": [
        "1. Allez sur https://discord.com/developers/applications",
        "2. Créez une nouvelle application",
        "3. Allez dans Bot > Reset Token",
        "4. Activez les Intents nécessaires",
        "5. Invitez le bot sur votre serveur"
      ]
    },

    "github": {
      "name": "GitHub",
      "personal_access_token": "ghp_VOTRE_TOKEN_GITHUB",
      "owner": "VOTRE_USERNAME_OU_ORG",
      "default_repo": "VOTRE_REPO_PRINCIPAL",
      "docs": "https://github.com/settings/tokens",
      "instructions": [
        "1. Allez sur https://github.com/settings/tokens",
        "2. Créez un nouveau token (classic ou fine-grained)",
        "3. Sélectionnez les permissions: repo, workflow, admin:org"
      ]
    },

    "heygen": {
      "name": "HeyGen",
      "api_key": "VOTRE_CLE_API_HEYGEN",
      "default_avatar_id": "Daisy-inskirt-20220818",
      "default_voice_id": "en-US-JennyNeural",
      "docs": "https://app.heygen.com/settings",
      "instructions": [
        "1. Connectez-vous sur https://app.heygen.com",
        "2. Allez dans Settings > API",
        "3. Copiez votre API Key"
      ]
    },

    "midjourney": {
      "name": "Midjourney (via GoAPI)",
      "goapi_key": "VOTRE_CLE_GOAPI",
      "discord_channel_id": "ID_CHANNEL_MIDJOURNEY",
      "docs": "https://www.goapi.ai",
      "instructions": [
        "1. Créez un compte sur https://www.goapi.ai",
        "2. Allez dans API Keys",
        "3. Créez une nouvelle clé",
        "4. Alternative: utilisez Discord directement"
      ]
    },

    "bubble": {
      "name": "Bubble.io",
      "api_key": "VOTRE_CLE_API_BUBBLE",
      "app_name": "VOTRE_APP_NAME",
      "docs": "https://bubble.io/reference",
      "instructions": [
        "1. Ouvrez votre app Bubble",
        "2. Settings > API",
        "3. Activez 'Enable Data API'",
        "4. Générez un API Token"
      ]
    },

    "make": {
      "name": "Make (Integromat)",
      "api_key": "VOTRE_CLE_API_MAKE",
      "team_id": "VOTRE_TEAM_ID",
      "webhook_base_url": "https://hook.eu1.make.com/",
      "webhooks": {
        "main": "VOTRE_WEBHOOK_ID_PRINCIPAL",
        "notifications": "VOTRE_WEBHOOK_ID_NOTIFS"
      },
      "docs": "https://www.make.com/en/api-documentation",
      "instructions": [
        "1. Connectez-vous sur https://www.make.com",
        "2. Allez dans Profile > API",
        "3. Créez un nouveau token"
      ]
    },

    "zapier": {
      "name": "Zapier",
      "webhooks": {
        "main": "https://hooks.zapier.com/hooks/catch/ACCOUNT_ID/HOOK_ID/",
        "backup": ""
      },
      "docs": "https://zapier.com/app/developer",
      "instructions": [
        "1. Créez un Zap avec trigger 'Webhooks by Zapier'",
        "2. Sélectionnez 'Catch Hook'",
        "3. Copiez l'URL du webhook"
      ]
    },

    "n8n": {
      "name": "n8n (local)",
      "api_url": "http://localhost:5678/api/v1",
      "api_key": "VOTRE_CLE_API_N8N",
      "docs": "http://localhost:5678/settings",
      "instructions": [
        "1. Ouvrez http://localhost:5678",
        "2. Allez dans Settings > API",
        "3. Activez l'API et créez une clé"
      ]
    }
  },

  "environment_variables": {
    "_note_": "Variables d'environnement pour le système",
    "N8N_API_URL": "http://localhost:5678/api/v1",
    "N8N_API_KEY": "VOTRE_CLE_API_N8N",
    "GOOGLE_AI_API_KEY": "VOTRE_CLE_GOOGLE_AI",
    "NOTION_API_KEY": "secret_VOTRE_CLE_NOTION",
    "DISCORD_BOT_TOKEN": "VOTRE_TOKEN_DISCORD",
    "GITHUB_TOKEN": "ghp_VOTRE_TOKEN",
    "HEYGEN_API_KEY": "VOTRE_CLE_HEYGEN",
    "GOAPI_KEY": "VOTRE_CLE_GOAPI",
    "BUBBLE_API_KEY": "VOTRE_CLE_BUBBLE",
    "MAKE_API_KEY": "VOTRE_CLE_MAKE"
  },

  "n8n_credentials_import": {
    "_note_": "Format pour import dans n8n",
    "credentials": [
      {
        "name": "Google AI Studio",
        "type": "httpQueryAuth",
        "data": { "name": "key", "value": "VOTRE_CLE_API_GOOGLE_AI" }
      },
      {
        "name": "Notion API",
        "type": "notionApi",
        "data": { "apiKey": "secret_VOTRE_CLE_NOTION" }
      },
      {
        "name": "Discord Bot",
        "type": "discordBotApi",
        "data": { "botToken": "VOTRE_TOKEN_BOT_DISCORD" }
      },
      {
        "name": "GitHub API",
        "type": "githubApi",
        "data": { "accessToken": "ghp_VOTRE_TOKEN" }
      },
      {
        "name": "HeyGen API",
        "type": "httpHeaderAuth",
        "data": { "name": "X-Api-Key", "value": "VOTRE_CLE_HEYGEN" }
      },
      {
        "name": "GoAPI Key",
        "type": "httpHeaderAuth",
        "data": { "name": "X-API-KEY", "value": "VOTRE_CLE_GOAPI" }
      },
      {
        "name": "Bubble API",
        "type": "httpHeaderAuth",
        "data": { "name": "Authorization", "value": "Bearer VOTRE_CLE_BUBBLE" }
      }
    ]
  }
}
